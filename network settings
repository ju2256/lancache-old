
#Contenu du fichier /etc/network/interface

# The loopback network interface
auto lo
iface lo inet loopback

# The primary network interface
auto eth0
iface eth0 inet static
address 192.168.1.100
gateway 192.168.1.1
netmask 255.255.255.0

auto eth0:0
iface eth0:0 inet static
address 192.168.1.101
netmask 255.255.255.0
gateway 192.168.1.1

auto eth0:1
iface eth0:1 inet static
address 192.168.1.102
netmask 255.255.255.0
gateway 192.168.1.1

auto eth0:2
iface eth0:2 inet static
address 192.168.1.103
netmask 255.255.255.0
gateway 192.168.1.1

auto eth0:3
iface eth0:3 inet static
address 192.168.1.104
netmask 255.255.255.0
gateway 192.168.1.1

auto eth0:4
iface eth0:4 inet static
address 192.168.1.105
netmask 255.255.255.0
gateway 192.168.1.1

auto eth0:5
iface eth0:5 inet static
address 192.168.1.106
netmask 255.255.255.0
gateway 192.168.1.1

# contenu /etc/hosts
192.168.1.101 lancache-steam
192.168.1.102 lancache-riot
192.168.1.103 lancache-blizzard
192.168.1.104 lancache-hirez
192.168.1.105 lancache-origin
192.168.1.106 lancache-sony

# changement proprietaire /srv/www
chown -R www-data:www-data /srv/www

# visualiser le traffic
nload -U G - u M -i 102400 -o 102400
